if $(TARGET_ARCH) = x86 {
	X86_ONLY = "" ;
	PPC_ONLY = ;
} else if $(TARGET_ARCH) = ppc {
	X86_ONLY = ;
	PPC_ONLY = "" ;
}

if $(INCLUDE_GPL_ADDONS) = 1 {
	GPL_ONLY = "" ;
} else {
	GPL_ONLY = ;
}

