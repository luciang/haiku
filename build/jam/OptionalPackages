# XZ-Utils
if [ IsOptionalHaikuImagePackageAdded XZ-Utils ] {
	if $(TARGET_ARCH) != x86 {
		Echo "No optional package XZ-Utils available for $(TARGET_ARCH)" ;
	} else {
		InstallOptionalHaikuImagePackage
			xz-utils-4.999.9-r1a2-x86-gcc4-2010-04-25-a.zip
			: $(baseURL)/xz-utils-4.999.9-r1a2-x86-gcc4-2010-04-25-a.zip
			:
			:
			: true
		;
		InstallSourceArchive xz-utils-4.999.9_haiku-2010-04-29.tar.xz
			: $(baseSourceURL)/xz-utils-4.999.9_haiku-2010-04-29.tar.xz ;
		AddExpanderRuleToHaikuImage "application/x-xz" : .tar.xz
			: "tar -Jtvf \\0045s"
			: "tar -Jxvf \\0045s"
		;
		AddExpanderRuleToHaikuImage "application/x-xz" : .txz
			: "tar -Jtvf \\0045s"
			: "tar -Jxvf \\0045s"
		;
		AddExpanderRuleToHaikuImage "application/x-xz" : .xz
			: "echo \\0045s | sed 's/.xz\\\$//g'"
			: "xz -df \\0045s"
		;
	}
}


