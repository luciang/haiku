SubDir OBOS_TOP src prefs mouse ;

if $(COMPILE_FOR_R5) {
        SubDirC++Flags -DCOMPILE_FOR_R5 ;
}

SubDirC++Flags -fmultiple-symbol-spaces ;

UsePrivateHeaders input ;

AddResources Mouse : Mouse.rdef ;

Preference Mouse : 
	Mouse.cpp 
	MouseSettings.cpp 
	MouseWindow.cpp
	MouseView.cpp 
	SettingsView.cpp
	;

LinkSharedOSLibs Mouse : translation be ;
