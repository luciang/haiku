	pci
	:
	<$(SOURCE_GRIST)>pci.o
	<$(SOURCE_GRIST)>pci_bus.o
	kernel.so
	:
	$(OBOS_TOP)/src/kernel/core/addons/ldscripts/$(OBOS_ARCH)/addon.ld
	:
	-Bdynamic -shared
	:
	:
	addons/kernel/pci
	;
