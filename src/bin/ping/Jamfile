SubDir OBOS_TOP src bin ping ;

UsePrivateHeaders net ;

if ! $(BONE_COMPATIBLE) {
	SubDirCcFlags -DBUILDING_R5_LIBNET ;
}

BinCommand ping :
	ping.c
	: $(NETWORK_LIBS) $(SELECT_UNAME_ETC_LIB) ;

# Installation -- in the test directory for the time being
OBOSInstall install-networking
	: [ FDirName $(OBOS_TEST_DIR) kits net ]
	: ping ;

Package haiku-networkingkit-cvs :
	ping :
#	boot home config bin ;
	boot home Desktop haiku-networkingkit ;

