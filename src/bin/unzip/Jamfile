SubDir OBOS_TOP src bin unzip ;

StaticLibrary unzip : 
	crc32.c
	ttyio.c
	crctab.c
	crypt.c
	envargs.c
	explode.c
	extract.c
	fileio.c
	globals.c
	inflate.c
	list.c
	match.c
	process.c
	zipinfo.c
	beos.c
	beosmain.cpp
	: : unzip.rdef
;

BinCommand unzip :
	unzip.c
	unreduce.c
	unshrink.c
	: libunzip.a be : unzip.rdef
;

BinCommand funzip :
	funzip.c
	cryptf.c
	globalsf.c
	inflatef.c
	crc32.c
	ttyio.c
	: be : unzip.rdef
;

BinCommand unzipsfx :
	unzip.c
	sfxdefs.c
	: libunzip.a be : unzip.rdef
;

{
	MakeLocate <bin>zipgrep : $(OBOS_BIN_DIR) ;
	Shell <bin>zipgrep : zipgrep ;
}
