SubDir HAIKU_TOP src bin screen_blanker ;

SetSubDirSupportedPlatformsBeOSCompatible ;

UsePrivateHeaders screen_saver ;

BinCommand screen_blanker :
	ScreenSaverApp.cpp
	SSAwindow.cpp
	PasswordWindow.cpp
	ScreenSaver.cpp
	: be game libscreensaver.so
	: screen_blanker.rdef
;

SEARCH on [ FGristFiles
		ScreenSaver.cpp
	] = [ FDirName $(HAIKU_TOP) src kits screensaver ] ;

Package haiku-screensaverkit-cvs :
	screen_blanker :
	boot home config bin ;
