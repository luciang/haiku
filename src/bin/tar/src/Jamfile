SubDir HAIKU_TOP src bin tar src ;

SubDirSysHdrs [ FDirName $(SUBDIR) $(DOTDOT) lib ] ;
SubDirSysHdrs [ FDirName $(SUBDIR) $(DOTDOT) ] ;
SubDirSysHdrs [ FDirName $(SUBDIR) ] ;

# set some additional defines
SubDirCcFlags -DHAVE_CONFIG_H -w -DLOCALEDIR=\'\"/etc/locale\"\' -DDEFAULT_RMT_COMMAND=\'\"/bin/rmt\"\' ;

local tar_rsrc = [ FGristFiles tar.rsrc ] ;
ResComp $(tar_rsrc) : [ FGristFiles tar.rdef ] ;

BinCommand tar :
	buffer.c
	compare.c
	create.c
	delete.c
	extract.c
	xheader.c
	incremen.c
	list.c
	misc.c
	names.c
	sparse.c
	system.c
	tar.c
	transform.c
	update.c
	utf8.c
	: libtar.a : tar.rsrc ;
