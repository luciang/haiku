SubDir OBOS_TOP src bin zip ;

local zip_rsrc = [ FGristFiles zip.rsrc ] ;
ResComp $(zip_rsrc) : [ FGristFiles zip.rdef ] ;

StaticLibrary zip : 
	zipup.c
	crypt.c
	ttyio.c
	beos.c
	globals.c
	deflate.c
	fileio.c
	util.c
	crc32.c
	zipfile.c
	trees.c
	crctab.c
;

BinCommand zip :
	zip.c
	: libzip.a be : zip.rsrc
;

BinCommand zipcloak :
	zipcloak.c
	bedefs.c
	: libzip.a : zip.rsrc
;

BinCommand zipnote :
	zipnote.c
	bedefs.c
	: libzip.a be : zip.rsrc
;

BinCommand zipsplit :
	zipsplit.c
	bedefs.c
	: libzip.a be : zip.rsrc
;
