SEARCH_SOURCE += [ FDirName $(SUBDIR) stxttranslator ] ;
SEARCH_SOURCE += [ FDirName $(SUBDIR) tgatranslator ] ;
SEARCH_SOURCE += [ FDirName $(SUBDIR) tifftranslator ] ;

