SubDir HAIKU_TOP src tests add-ons kernel disk_scanner fs ;

SEARCH_SOURCE
	+= [ FDirName $(HAIKU_TOP) src add-ons kernel disk_scanner fs ] ;

UsePrivateHeaders $(DOT) ;

{
	local defines = [ FDefines USERLAND ] ;
	SubDirCcFlags $(defines) ;
	SubDirC++Flags $(defines) ;
}

# bfs

Addon <userland>bfs : userland disk_scanner fs :
	bfs.c
;
LinkAgainst <userland>bfs : libkernelland_emu.so ;

# iso9660

Addon <userland>iso9660 : userland disk_scanner fs :
	iso9660.cpp
;
LinkAgainst <userland>iso9660 : libkernelland_emu.so ;

