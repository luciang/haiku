SEARCH_SOURCE += [ FDirName $(OBOS_TOP) src add-ons kernel network interfaces ppp ] ;

Addon <userland>ppp : userland network interfaces : 
	kernel_cpp.cpp
	ppp.cpp
	PPPManager.cpp
;

LinkSharedOSLibs <userland>ppp : libkernelppp.a <installed>net_stack_tester ;

