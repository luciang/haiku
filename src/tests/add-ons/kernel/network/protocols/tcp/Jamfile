SubDir HAIKU_TOP src tests add-ons kernel network protocols tcp ;

SetSubDirSupportedPlatformsBeOSCompatible ;

UseLegacyHeaders network ;
UseHeaders [ FDirName $(HAIKU_TOP) headers posix ] : true ;
UsePrivateHeaders net ;

SEARCH_SOURCE += [ FDirName $(HAIKU_TOP) src add-ons kernel network protocols tcp ] ;

Addon <userland>tcp : userland obos_network protocols : 
	tcp.c
	tcp_debug.c
	tcp_input.c
	tcp_output.c
	tcp_timer.c
	arc4random.c
;

LinkAgainst <userland>tcp : <installed>net_stack_tester ;
