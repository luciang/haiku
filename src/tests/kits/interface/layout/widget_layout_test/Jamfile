	MenuFieldTest.cpp
	MenuTest.cpp
	RadioButtonTest.cpp
	ScrollBarTest.cpp
	SliderTest.cpp
	TextControlTest.cpp
	TextViewTest.cpp
	:
	be $(TARGET_LIBSUPC++)
;

if $(TARGET_PLATFORM) = libbe_test {
	HaikuInstall install-test-apps : $(HAIKU_APP_TEST_DIR)
		: WidgetLayoutTest
		: tests!apps ;
}
