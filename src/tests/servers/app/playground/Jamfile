	# for running natively under R5 or Haiku:
	LinkSharedOSLibs Playground :
		libbe.so ;
} else {
	# for running in the Haiku app_server under R5:
	LinkSharedOSLibs Playground :
#		<boot!home!config!lib>libopenbeos.so ;
		be ;
}

