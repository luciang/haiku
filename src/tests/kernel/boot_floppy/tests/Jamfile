	libglue2.o
	<$(SOURCE_GRIST)>fops_test.o
	libroot.so
	:
	$(OBOS_TOP)/src/kernel/ldscripts/$(OBOS_ARCH)/app.ld
	:
	:
	:
	bin/fops_test
	; 

KernelLd random_test :
	libglue2.o
	<$(SOURCE_GRIST)>random_test.o
	libroot.so
	:
	$(OBOS_TOP)/src/kernel/ldscripts/$(OBOS_ARCH)/app.ld
	:
	:
	:
	bin/random_test
	; 
