SubDir OBOS_TOP src libs zlib ;

UseLibraryHeaders zlib ;

local shared_files =
	adler32.c
	compress.c
	crc32.c
	deflate.c
	gzio.c
	infback.c
	inffast.c
	inflate.c
	inftrees.c
	trees.c
	uncompr.c
	zutil.c
;

Objects $(shared_files) ;

SharedLibrary z : [ FGristFiles $(shared_files:S=.o) ] ;

StaticLibrary z : [ FGristFiles $(shared_files:S=.o) ] : STATIC_LIBRARY_DIR ;

