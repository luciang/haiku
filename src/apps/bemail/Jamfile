SubDir HAIKU_TOP src apps bemail ;

SetSubDirSupportedPlatformsBeOSCompatible ;

if $(TARGET_PLATFORM) != haiku {
	UsePublicHeaders mail ;
}

UsePrivateHeaders mail ;
UsePrivateHeaders textencoding ;
UsePrivateHeaders shared ;

AddResources BeMail : versioning.rdef pictures.rdef  ;
Application BeMail : 
	BmapButton.cpp
	ButtonBar.cpp
	ComboBox.cpp
	Content.cpp
	Enclosures.cpp
	FindWindow.cpp
	Header.cpp
	Mail.cpp
	Prefs.cpp
	QueryMenu.cpp
	Signature.cpp
	Status.cpp
	Utilities.cpp
	WIndex.cpp
	Words.cpp
	KUndoBuffer.cpp ;

LinkAgainst BeMail : be tracker stdc++.r4 libmail.so libtextencoding.so ;

Package haiku-maildaemon-cvs :
	BeMail : 
	boot beos apps ;
