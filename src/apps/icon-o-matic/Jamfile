	# generic/gui/panel/color_picker
	ColorField.cpp
	ColorPickerPanel.cpp
	ColorPickerView.cpp
	ColorPreview.cpp
	ColorSlider.cpp
	# generic/gui/popup_control
	# generic/gui/scrollview
	Scrollable.cpp
	Scroller.cpp
	ScrollView.cpp
	# generic/gui/stateview
	Manipulator.cpp
	MultipleManipulatorState.cpp
	StateView.cpp
	ViewState.cpp
	# generic/listener
	Observable.cpp
	Observer.cpp
	# generic/property
	CommonPropertyIDs.cpp
