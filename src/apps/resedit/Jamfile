SubDir HAIKU_TOP src apps resedit ;

SetSubDirSupportedPlatformsBeOSCompatible ;

UsePrivateHeaders shared interface ;

local columnViewSources ;

if ! $(TARGET_PLATFORM_HAIKU_COMPATIBLE) {
	columnViewSources = ColumnListView.cpp ColumnTypes.cpp ColorTools.cpp ;
}

SEARCH_SOURCE += [ FDirName $(HAIKU_TOP) src kits interface ] ;

Application ResEdit :
	$(columnViewSources)
	App.cpp
	BitmapView.cpp
	ImageEditor.cpp
	InlineEditor.cpp
	MiscEditors.cpp
	NumberEditors.cpp
	PreviewColumn.cpp
	ResFields.cpp
	ResListView.cpp
	ResourceData.cpp
	ResourceRoster.cpp
	ResView.cpp
	ResWindow.cpp
	: be tracker translation libcolumnlistview.a $(TARGET_LIBSUPC++)
;
