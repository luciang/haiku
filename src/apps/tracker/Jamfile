SubDir OBOS_TOP src apps tracker ;

UsePrivateHeaders shared ;
UsePrivateHeaders tracker ;
SubDirHdrs $(OBOS_TOP) src kits tracker ;

AddResources Tracker : Tracker.rdef ;

App Tracker :
	main.cpp
	;
if ( $(TARGET_PLATFORM) = haiku ) {

LinkSharedOSLibs Tracker : libbe.so libtracker.so ;

} else {

LinkSharedOSLibs Tracker : <boot!home!config!lib>libopenbeos.so libtracker.so ;
}