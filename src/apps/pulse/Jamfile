SubDir HAIKU_TOP src apps pulse ;

UsePrivateHeaders shared ;

if $(TARGET_PLATFORM) = r5 {
	SubDirC++Flags -DR5_COMPATIBLE ;
}

Application Pulse : 
	BottomPrefsView.cpp
	ConfigView.cpp
	CPUButton.cpp
	DeskbarPulseView.cpp
	MiniPulseView.cpp
	NormalPulseView.cpp
	Prefs.cpp
	PrefsWindow.cpp
	ProgressBar.cpp
	PulseApp.cpp
	PulseView.cpp
	PulseWindow.cpp 

	: libbe.so  
	: Pulse.rdef 
;

if $(HAIKU_COMPATIBLE) {
	LinkAgainst Pulse : libroot.so ;
}
