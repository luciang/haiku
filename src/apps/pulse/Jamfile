SubDir OBOS_TOP src apps pulse ;

UsePrivateHeaders shared ;

local r5_src = strlcpy.c ;

if $(HAIKU_COMPATIBLE) {
	r5_src = ;
} 

App Pulse : BottomPrefsView.cpp
	ConfigView.cpp
	CPUButton.cpp
	DeskbarPulseView.cpp
	MiniPulseView.cpp
	NormalPulseView.cpp
	Prefs.cpp
	PrefsWindow.cpp
	ProgressBar.cpp
	PulseApp.cpp
	PulseView.cpp
	PulseWindow.cpp 
	$(r5_src)	
	: be 
	: Pulse.rdef ;

if $(HAIKU_COMPATIBLE) {
	LinkSharedOSLibs Pulse : libroot.so ;
}

SEARCH on [ FGristFiles
                strlcpy.c
        ] = [ FDirName $(OBOS_TOP) src system libroot posix string ] ;

