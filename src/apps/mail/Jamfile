if $(TARGET_PLATFORM) != haiku {
	UsePublicHeaders mail ;
}

UsePrivateHeaders interface ;
UsePrivateHeaders mail ;
UsePrivateHeaders textencoding ;
UsePrivateHeaders shared ;
UsePrivateHeaders storage ;

