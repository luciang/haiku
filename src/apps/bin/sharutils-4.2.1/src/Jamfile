SubDir OBOS_TOP src apps bin sharutils-4.2.1 src ;

SubDirCcFlags -I ../lib -DHAVE_CONFIG_H  -DLOCALEDIR=\'\"/share/locale\"\' ;
SubDirHdrs [ FDirName $(SUBDIR) $(DOTDOT) lib ] ;
SubDirHdrs [ FDirName $(SUBDIR) $(DOTDOT) ] ;

local sharutils_rsrc = [ FGristFiles sharutils.rsrc ] ;
ResComp $(sharutils_rsrc) : [ FGristFiles sharutils.rdef ] ;

BinCommand shar : 
  	shar.c encode.c 
  	: libsharutils.a
  	: sharutils.rsrc ;

BinCommand unshar : 
  	unshar.c 
  	: libsharutils.a
  	: sharutils.rsrc ;

BinCommand uuencode : 
  	uuencode.c 
  	: libsharutils.a 
  	: sharutils.rsrc ;

BinCommand uudecode : 
  	uudecode.c 
  	: libsharutils.a 
  	: sharutils.rsrc ;
