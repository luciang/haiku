SubDir OBOS_TOP src apps bin unzip ;

StaticLibrary unzip :
	crc32.c
	crctab.c
	crypt.c
	envargs.c
	explode.c
	extract.c
	fileio.c
	globals.c
	inflate.c
	list.c
	match.c
	process.c
	ttyio.c
	zipinfo.c
	beos.c
	beosmain.cpp
;

BinCommand unzip :
	unzip.c
	unreduce.c
	unshrink.c
	: libunzip.a
;

LinkSharedOSLibs unzip : be ;


BinCommand funzip :
	funzip.c
	crc32.c
	cryptf.c
	globalsf.c
	inflatef.c
	ttyio.c
;

LinkSharedOSLibs funzip : be ;

BinCommand unzipsfx :
	unzip.c
	sfxdefs.c
	: libunzip.a
;

LinkSharedOSLibs unzipsfx : be ;

{
	MakeLocate <bin>zipgrep : $(OBOS_BIN_DIR) ;
	Shell <bin>zipgrep : zipgrep ;
}
