# That's ugly. The header (ServerInterface.h) should reside in
# headers/private/media.
SubDirHdrs [ FDirName $(HAIKU_TOP) src servers media ] ;

Server media_addon_server :
	main.cpp
	MediaFilePlayer.cpp
	SystemTimeSource.cpp
	:
	be libmedia.so
;
