	# resolv
	herror.c
	res_comp.c
	res_data.c
	res_debug.c
	res_findzonecut.c
	res_init.c
	res_mkquery.c
	res_mkupdate.c
	res_query.c
	res_send.c
	res_sendsigned.c
	res_update.c
	
	# functions from our libroot
	pthread_mutex.c
	pthread_mutexattr.c
	strlcat.c
	
	# private functions
	arc4random.c
	ethers.c
	linkaddr.c
	pthread_emu.c
	res_resultcodes.c
	strsep.c
;

LinkSharedOSLibs libbind.so :
	root 
	be # BeOS defines syslog in libbe.so
	libsocket.so 
	libnet.so # for gethostname()
;

# Installation -- in the test directory for the time being
OBOSInstallRelSymLink install-networking
	: [ FDirName $(OBOS_TEST_DIR) kits net lib ]
	: libbind.so
	: installed-networking-test ;

Package haiku-networkingkit-cvs :
	libbind.so :
#	boot home config lib ;
	boot home Desktop haiku-networkingkit lib ;
