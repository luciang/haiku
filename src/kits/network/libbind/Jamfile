	getprotoent_r.c
	getpwent.c
	getpwent_r.c
	getservent.c
	getservent_r.c
	hesiod.c
	irp.c
	irp_gr.c
	irp_ho.c
	irp_ng.c
	irp_nw.c
	irp_pr.c
	irp_pw.c
	irp_sv.c
	irpmarshall.c
	irs_data.c
	lcl.c
	lcl_gr.c
	lcl_ho.c
	lcl_ng.c
	lcl_nw.c
	lcl_pr.c
	lcl_pw.c
	lcl_sv.c
	nis.c
	nis_gr.c
	nis_ho.c
	nis_ng.c
	nis_nw.c
	nis_pr.c
	nis_pw.c
	nis_sv.c
	nul_ng.c
	util.c
	
	# isc (not used)
	assertions.c
	base64.c
