SubDir HAIKU_TOP src kits network libnetwork ;

{
	# Default libs include BeOS R5 libnet.so, something we don't want here!
	LINKFLAGS on libnetwork.so = [ on libnetwork.so return $(LINKFLAGS) ] -nodefaultlibs ;
}

SharedLibrary libnetwork.so ;

LinkAgainst libnetwork.so :
	<libnetwork_dns>dns_dst.o
	<libnetwork_dns>dns_inet.o
	<libnetwork_dns>dns_irs.o
	<libnetwork_dns>dns_isc.o # (not used)
	<libnetwork_dns>dns_nameser.o
	<libnetwork_dns>dns_resolv.o
	<libnetwork_dns>dns_private.o
	<libnetwork_socket>socket_socket.o
	
	be
	root
;

# Installation -- in the test directory for the time being
HaikuInstallRelSymLink install-networking
	: [ FDirName $(HAIKU_TEST_DIR) kits net lib ]
	: libnetwork.so
	: installed-networking-test ;

Package haiku-networkingkit-cvs :
	libnetwork.so :
#	boot home config lib ;
	boot home Desktop haiku-networkingkit lib ;


SubInclude HAIKU_TOP src kits network libnetwork dns ;
SubInclude HAIKU_TOP src kits network libnetwork socket ;
