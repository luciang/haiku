SubDir OBOS_TOP src kits textencoding ;

UsePrivateHeaders textencoding ;
SubDirHdrs [ FDirName $(SUBDIR) libiconv ] ;

SharedLibrary textencoding :
	CharacterSet.cpp
	CharacterSetRoster.cpp
	character_sets.cpp
	utf8_conversions.cpp
	: libiconv.a ;
LinkSharedOSLibs libtextencoding.so : be ;

MakeLocate <develop>libtextencoding.so : $(OBOS_STLIB_DIR) ;
RelSymLink <develop>libtextencoding.so : libtextencoding.so ;

Package haiku-maildaemon-cvs :
	libtextencoding.so :
	boot home config lib ;

SubInclude OBOS_TOP src kits textencoding libiconv ;
