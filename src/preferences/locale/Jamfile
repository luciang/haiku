SubDir HAIKU_TOP src preferences locale ;

UseLibraryHeaders icu ;
UsePrivateHeaders locale ;
UsePrivateHeaders shared ;

Preference Locale :
	Locale.cpp
	LocaleWindow.cpp
	TimeFormatSettingsView.cpp
	: be liblocale.so $(TARGET_LIBSTDC++) $(TARGET_LIBSUPC++) libicu-common.so
		libicu-data.so libshared.a
	: Locale.rdef
	;

DoCatalogs Locale		# application name
	: x-vnd.Haiku-Locale # app MIME signature
	:					# sources to extract the keys from
	Locale.cpp
	LocaleWindow.cpp
	TimeFormatSettingsView.cpp
	: en.catalog		# default catalog generated from sourcecode
	:					# translations
	fi.catkeys fr.catkeys de.catkeys hu.catkeys lt.catkeys ru.catkeys sv.catkeys
	uk.catkeys
	;

