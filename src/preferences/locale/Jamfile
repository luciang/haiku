SubDir HAIKU_TOP src preferences locale ;

UseLibraryHeaders icu ;
UsePrivateHeaders locale ;
UsePrivateHeaders shared ;

Preference Locale :
	LanguageListView.cpp
	Locale.cpp
	LocaleSettings.cpp
	LocaleWindow.cpp
	TimeFormatSettingsView.cpp

	: be $(TARGET_LIBSTDC++) $(TARGET_LIBSUPC++)
		libshared.a $(HAIKU_LOCALE_LIBS) $(HAIKU_ICU_LIBS)
	: Locale.rdef
;

DoCatalogs Locale : x-vnd.Haiku-Locale :
	LanguageListView.cpp
	Locale.cpp
	LocaleWindow.cpp
	TimeFormatSettingsView.cpp
;
