SubDir HAIKU_TOP src preferences network ;

UsePrivateHeaders shared ;
UseHeaders [ FDirName $(HAIKU_TOP) src servers net ] : true ;

Preference Network :
	NetworkApp.cpp
	NetworkWindow.cpp
	EthernetSettingsView.cpp
	Settings.cpp

	: be $(HAIKU_NETWORK_LIBS) $(TARGET_LIBSUPC++) liblocale.so
	: Network.rdef
;

DoCatalogs Network :
	x-vnd.Haiku-Network
	:
	EthernetSettingsView.cpp
	NetworkWindow.cpp
	: en.catalog
	: bg.catkeys pt_br.catkeys de.catkeys fr.catkeys hu.catkeys it.catkeys
	  lt.catkeys pl.catkeys pt.catkeys ru.catkeys sv.catkeys uk.catkeys
	;
