SubDir HAIKU_TOP src preferences network ;

UsePrivateHeaders shared ;
UseHeaders [ FDirName $(HAIKU_TOP) src servers net ] : true ;

Preference Network :
	NetworkApp.cpp
	NetworkWindow.cpp
	EthernetSettingsView.cpp
	Settings.cpp

	: be $(HAIKU_NETWORK_LIBS) $(TARGET_LIBSUPC++) liblocale.so
	: Network.rdef
;

DoCatalogs Network :
	x-vnd.Haiku-Network
	:
	EthernetSettingsView.cpp
	NetworkWindow.cpp
;
