SubDir OBOS_TOP src system boot platform openfirmware arch ppc ;

SubDirHdrs $(OBOS_TOP) src system boot platform $(OBOS_BOOT_PLATFORM) ;

SubDirC++Flags -fno-rtti ;

KernelStaticLibrary boot_platform_openfirmware_ppc :
	arch_mmu.cpp
	arch_cpu_asm.S
	mmu.cpp
	:
	;

SEARCH on [ FGristFiles arch_cpu_asm.S arch_mmu.cpp ]
    = [ FDirName $(OBOS_TOP) src system kernel arch $(OBOS_ARCH) ] ;
