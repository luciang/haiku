SubDir HAIKU_TOP src add-ons kernel bus_managers usb ;

SubDirC++Flags -fno-rtti ;

SubDirSysHdrs $(SUBDIR) ;
UsePrivateHeaders [ FDirName kernel ] ;

AddResources usb : usb.rdef ;

KernelStaticLibrary libusb.a :
	Stack.cpp
	Device.cpp
	Hub.cpp
	BusManager.cpp
	Transfer.cpp
	Pipe.cpp
	: -fno-pic
;	

KernelAddon usb : [ FDirName kernel bus_managers ] :
	usb.cpp
	;

LinkAgainst usb : libusb.a ;