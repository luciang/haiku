SubDir OBOS_TOP src add-ons kernel drivers network wb840 ;

# set some additional flags
SubDirCcFlags -Wall ;

# For ether_driver.h
UsePrivateHeaders net ;

R5KernelAddon wb840 : kernel drivers bin :
	driver.c
	device.c
	interface.c
	wb840.c
	;

Package openbeos-wb840-cvs :
	wb840 : 
	boot home config add-ons kernel drivers bin ;
Package openbeos-wb840-cvs :
	<kernel!drivers!dev!net>wb840 :
	boot home config add-ons kernel drivers dev net ;
#Package openbeos-wb840-cvs :
#	wb840.settings :
#	boot home config settings kernel drivers sample ;

Package openbeos-networkingkit-cvs :
	wb840 :
	boot home config add-ons kernel drivers bin ;
Package openbeos-networkingkit-cvs :
	<kernel!drivers!dev!net>wb840 :
	boot home config add-ons kernel drivers dev net ;
#Package openbeos-networkingkit-cvs :
#	wb840.settings :
#	boot home config settings kernel drivers sample ;



# Link driver(s) to kernel/drivers/dev/net
{
	local dir = [ FDirName $(OBOS_ADDON_DIR) kernel drivers dev net ] ;

	local instDriver = <kernel!drivers!dev!net>wb840 ;
	MakeLocate $(instDriver) : $(dir) ;
	RelSymLink $(instDriver) : wb840 ;
}


rule Installwb840
{
	Depends $(<) : $(>) ;
}

actions ignore Installwb840
{
	cp $(>) /boot/home/config/add-ons/kernel/drivers/bin/
}

#Installwb840 install : wb840 ;

# Installation

OBOSInstall install-networking : /boot/home/config/add-ons/kernel/drivers/bin : 
 	wb840 
;

OBOSInstallRelSymLink install-networking : /boot/home/config/add-ons/kernel/drivers/dev/net : 
	<installed>wb840 : 
	installed-symlink 
;

