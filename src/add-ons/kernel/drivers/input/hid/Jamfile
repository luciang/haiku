SubDir OBOS_TOP src add-ons kernel drivers input hid ;

UsePrivateHeaders input ;

R5KernelAddon hid : kernel drivers bin :
	hid.c
	hidparse.c
	devlist.c
;

ObjectHdrs [ FGristFiles hid$(SUFOBJ) ] : [ FObjectsDir src prefs devices ] ;

Includes [ FGristFiles hid.c ] : <src!prefs!devices>usbdevs.h <src!prefs!devices>usbdevs_data.h ;

# Link to kernel/drivers/dev/input/
{
	local dir = [ FDirName $(OBOS_ADDON_DIR) kernel drivers dev input ] ;
	local instDriver = <kernel!drivers!dev!input>hid ;
	MakeLocate $(instDriver) : $(dir) ;
	RelSymLink $(instDriver) : hid ;
}

Package haiku-inputkit-cvs :
        hid :
        boot home config add-ons kernel drivers bin ;

Package haiku-inputkit-cvs :
        <kernel!drivers!dev!input>hid :
        boot home config add-ons kernel drivers dev input ;

