SubDir HAIKU_TOP src add-ons mail_daemon inbound_protocols imap ;

SetSubDirSupportedPlatformsBeOSCompatible ;

UsePrivateHeaders mail ;

SubDirHdrs [ FDirName $(HAIKU_TOP) headers os add-ons mail_daemon ] ;

if $(USESSL) {
	SubDirC++Flags -DUSESSL ;
	SubDirHdrs [ FDirName / boot home config include ] ;
}

if $(BONE_COMPATIBLE) {
	SubDirC++Flags -DBONE ;
} else {
	SubDirC++Flags -DBUILDING_R5_LIBNET ;
}

Addon IMAP : mail_daemon inbound_protocols :
	imap_client.cpp
	imap_config.cpp
	NestedString.cpp ;

LinkAgainst IMAP : be libmail.so $(NETWORK_LIBS) ;

if $(USESSL) {
	LinkAgainst IMAP : ssl crypto ;
}

Package haiku-maildaemon-cvs :
	IMAP : 
	boot home config add-ons mail_daemon inbound_protocols ;
