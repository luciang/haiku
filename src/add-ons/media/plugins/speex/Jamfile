SubDir OBOS_TOP src add-ons media plugins speex ;

UsePrivateHeaders media ;

SubDirHdrs $(SUBDIR) .. ogg ;
SubDirHdrs $(SUBDIR) .. ogg libogg ;
SubDirHdrs $(SUBDIR) libspeex ;

Addon speex : media plugins :
	speexCodecPlugin.cpp
	speexCodecDefaults.cpp
	: false : libspeex.a 
;

LinkSharedOSLibs speex : be libmedia.so ;

SubInclude OBOS_TOP src add-ons media plugins speex libspeex ;
