SubDir OBOS_TOP src add-ons media plugins ogg ;

UsePrivateHeaders media ;

SubDirHdrs [ FDirName $(SUBDIR) libogg ] ;

Addon ogg : media plugins :
	OggReaderPlugin.cpp
	OggTrack.cpp
	OggStream.cpp
	OggSeekable.cpp
	OggSpeexStream.cpp
	OggTheoraStream.cpp
	OggTobiasStream.cpp
