	:  
	libavformat.a
	libavcodec.a
	libavcodec_$(TARGET_ARCH).a
	libavutil.a
	libswscale.a
	be
	libmedia.so
	libz.a
;

SubInclude HAIKU_TOP src add-ons media plugins avcodec libavcodec ;
