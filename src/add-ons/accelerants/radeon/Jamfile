	palette.c
	pll.c
	settings.cpp
	theatre_out.c
	vesa_modes.c
	: libaccelerantscommon.a libradeon.a be
;

Package haiku-radeon-cvs :
	radeon.accelerant : 
	boot home config add-ons accelerants ;

Depends radeon.accelerant : radeon ;
