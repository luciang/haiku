SubDir HAIKU_TOP src add-ons accelerants neomagic ;

SetSubDirSupportedPlatformsBeOSCompatible ;

UsePrivateHeaders graphics ;
UsePrivateHeaders [ FDirName graphics neomagic ] ;
UseHeaders [ FDirName $(SUBDIR) engine ] ;

Addon nm.accelerant :
	Acceleration.c
	Cursor.c
	EngineManagment.c
	GetAccelerantHook.c
	GetDeviceInfo.c
	GetModeInfo.c
	GetTimingConstraints.c
	InitAccelerant.c
	Overlay.c
	ProposeDisplayMode.c
	SetDisplayMode.c
	: libneomagic_engine.a
;

Package haiku-neomagic-cvs :
	nm.accelerant :
	boot home config add-ons accelerants ;

Depends nm.accelerant : nm.driver ;

SubInclude HAIKU_TOP src add-ons accelerants neomagic engine ;
