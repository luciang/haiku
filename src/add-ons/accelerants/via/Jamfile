SubDir OBOS_TOP src add-ons accelerants via ;

UsePrivateHeaders graphics ;
UsePrivateHeaders [ FDirName graphics via ] ;
UseHeaders [ FDirName $(SUBDIR) engine ] ;


Addon via.accelerant : accelerants :
	Acceleration.c
	Cursor.c
	EngineManagement.c
	GetAccelerantHook.c
	GetDeviceInfo.c
	GetModeInfo.c
	GetTimingConstraints.c
	InitAccelerant.c
	Overlay.c
	ProposeDisplayMode.c
	SetDisplayMode.c
	: false : libvia_engine.a
;

Package haiku-via_gfx-cvs :
	via.accelerant : 
	boot home config add-ons accelerants ;

Depends via.accelerant : via.driver ;

SubInclude OBOS_TOP src add-ons accelerants via engine ;
