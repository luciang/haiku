SubDir OBOS_TOP src add-ons accelerants nvidia ;

UsePrivateHeaders graphics ;
UsePrivateHeaders [ FDirName graphics nvidia ] ;
UseHeaders [ FDirName $(SUBDIR) engine ] ;


Addon nv.accelerant : accelerants :
	Acceleration.c
	Cursor.c
	EngineManagment.c
	GetAccelerantHook.c
	GetDeviceInfo.c
	GetModeInfo.c
	GetTimingConstraints.c
	InitAccelerant.c
	Overlay.c
	ProposeDisplayMode.c
	SetDisplayMode.c
	: false : libnvidia_engine.a
;

Package openbeos-nvidia-1.0 :
	nv.accelerant : 
	boot home config add-ons accelerants ;

Depends nv.accelerant : nv.driver ;

SubInclude OBOS_TOP src add-ons accelerants nvidia engine ;
