SubDir OBOS_TOP src add-ons translators png ;

UseLibraryHeaders zlib ;
UseLibraryHeaders png ;

# Include BaseTranslator code from shared directory
SEARCH_SOURCE += [ FDirName $(OBOS_TOP) src add-ons translators shared ] ;

Translator PNGTranslator : 
	# shared classes
	BaseTranslator.cpp
	TranslatorSettings.cpp
	TranslatorWindow.cpp	

	# PNGTranslator classes
	PNGMain.cpp
	PNGTranslator.cpp
	PNGView.cpp ;

if ( $(TARGET_PLATFORM) = haiku ) {
	LinkSharedOSLibs PNGTranslator :
		libbe.so libtranslation.so libpng.so libz.so ;
} else {
	LinkSharedOSLibs PNGTranslator :
		be translation libpng.a libz.a ;
}

Package haiku-translationkit-cvs :
	PNGTranslator :
	boot home config add-ons Translators ;

