SubDir HAIKU_TOP src add-ons translators hpgs ;

SubDirSysHdrs [ FDirName $(SUBDIR) lib ] ;
SubDirCcFlags -DHPGS_SHARED -std=c99 ;
UseLibraryHeaders zlib png ;
SubDirHdrs [ FDirName $(SUBDIR) $(DOTDOT) shared ] ;

local sources = 
hpgsbase.c
hpgsbbox.c
hpgsbezier.c
hpgs.c
hpgscharacter.c
hpgsdevices.c
hpgsfont.c
hpgsglobal.c
hpgsgstate.c
hpgsi18n.c
hpgsimage.c
hpgsimagerop.c
hpgsistream.c
hpgslabel.c
hpgslexer.c
hpgsmatrix.c
hpgsostream.c
hpgspaint.c
hpgspaintimage.c
hpgspaintpath.c
hpgspath.c
hpgspcl.c
hpgspe.c
hpgspen.c
hpgspjl.c
hpgsreader.c
hpgsrop.c
hpgsscanline.c
hpgssetup.c
hpgstransform.c
hpgszostream.c
;

Translator HPGSTranslator :
	# HPGSTranslator classes
	ConfigView.cpp
	HPGSTranslator.cpp
	$(sources)
	: be translation libpng.so libtextencoding.so libz.so libtranslatorsutils.a
	: true
;

SEARCH on [ FGristFiles $(sources) ] = [ FDirName $(SUBDIR) lib ] ;
