SubDir HAIKU_TOP src add-ons print transports lpr ;

SetSubDirSupportedPlatformsBeOSCompatible ;

SubDirHdrs [ FDirName $(HAIKU_TOP) src add-ons print transports shared ] ;

Addon LPR : Print transport : 
	Lpr.cpp
	LprSetupDlg.cpp
	LprTransport.cpp
	LpsClient.cpp

	Socket.o
	SocketStream.o
	DbgMsg.o
;

ObjectReferences
